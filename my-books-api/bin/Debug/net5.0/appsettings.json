        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "path": "Logs/log.txt",
          "ConnectionString": "Data Source=desktop-kvvpm92;Initial Catalog=my-books-api.db;Integrated Security=True;Pooling=False",
          "tableName": "Logs"
        }
      }
    ]
  },
  "AllowedHosts": "*",
